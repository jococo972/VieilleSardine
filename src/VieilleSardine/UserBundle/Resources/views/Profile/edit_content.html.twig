{% trans_default_domain 'FOSUserBundle' %}
<center>
<br>
<br>
<fieldset>
    <legend><h3>Modifier ses informations de connexion</h3></legend>
<form class="form-horizontal" action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
    <table>
     <tr>
        <td>{{ form_label(form.username) }}</td>
        <td>{{ form_errors(form.username) }}</td>
        <td>{{ form_widget(form.username) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.email) }}</td>
        <td>{{ form_errors(form.email) }}</td>
        <td>{{ form_widget(form.email) }}</td>
    </tr>
    <tr>
        <td>{{ form_label(form.current_password) }}</td>
        <td>{{ form_errors(form.current_password) }}</td>
        <td>{{ form_widget(form.current_password) }}</td>
    </tr>
    <tr>
        <td></td>
        <td>
            <input class="btn" type="submit" />
        </td>
        <td></td>
    </tr>
    </table>
</form>
</fieldset>
